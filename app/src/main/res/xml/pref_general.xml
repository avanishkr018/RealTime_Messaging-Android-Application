<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- NOTE: EditTextPreference accepts EditText attributes. -->
    <!-- NOTE: EditTextPreference's summary should be set to its value by the activity code. -->
    <EditTextPreference
        android:key="server"
        android:title="@string/pref_title_server"
        android:defaultValue="@string/DefaultServer"
        android:selectAllOnFocus="true"
        android:inputType="textCapWords"
        android:capitalize="words"
        android:singleLine="true"
        android:maxLines="1" />

    <CheckBoxPreference
        android:key="isCluster"
        android:title="@string/pref_title_is_cluster"
        android:defaultValue="true" />

    <EditTextPreference
        android:key="authToken"
        android:title="@string/pref_title_auth_token"
        android:defaultValue="@string/DefaultAuthenticationToken"
        android:selectAllOnFocus="true"
        android:inputType="textCapWords"
        android:capitalize="words"
        android:singleLine="true"
        android:maxLines="1" />

    <EditTextPreference
        android:key="appKey"
        android:title="@string/pref_title_app_key"
        android:defaultValue="@string/DefaultApplicationKey"
        android:selectAllOnFocus="true"
        android:inputType="textCapWords"
        android:capitalize="words"
        android:singleLine="true"
        android:maxLines="1" />

    <EditTextPreference
        android:key="privateKey"
        android:title="@string/pref_title_private_key"
        android:defaultValue="@string/DefaultPrivateKey"
        android:selectAllOnFocus="true"
        android:inputType="textCapWords"
        android:capitalize="words"
        android:singleLine="true"
        android:maxLines="1" />

    <EditTextPreference
        android:key="connMetada"
        android:title="@string/pref_title_connection_metada"
        android:defaultValue="@string/DefaultConnectionMetadata"
        android:selectAllOnFocus="true"
        android:inputType="textCapWords"
        android:capitalize="words"
        android:singleLine="true"
        android:maxLines="1" />

    <EditTextPreference
        android:key="channel"
        android:title="@string/pref_title_channel"
        android:defaultValue="@string/DefaultChannel"
        android:selectAllOnFocus="true"
        android:inputType="textCapWords"
        android:capitalize="words"
        android:singleLine="true"
        android:maxLines="1" />

    <EditTextPreference
        android:key="message"
        android:title="@string/pref_title_message"
        android:defaultValue="@string/DefaultText"
        android:selectAllOnFocus="true"
        android:inputType="textCapWords"
        android:capitalize="words"
        android:singleLine="true"
        android:maxLines="1" />


</PreferenceScreen>
